{
  "name": "hastebin-server",
  "version": "0.0.0",
  "private": true,
  "description": "Private Pastebin Server",
  "keywords": [
    "paste",
    "pastebin"
  ],
  "dependencies": {
    "@hastebin/file-data-store": "*",
    "@hastebin/db-wrapper": "*",
    "connect": "^3.7.0",
    "connect-ratelimit": "^0.0.7",
    "connect-route": "0.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-form-data": "^2.0.18",
    "http-status-codes": "^2.2.0",
    "st": "^3.0.0",
    "tsconfig-paths": "^4.0.0",
    "uglify-js": "3.1.6",
    "winston": "^2.0.0"
  },
  "devDependencies": {
    "@hastebin/amazon-s3-data-store": "*",
    "@hastebin/data-store-helper": "*",
    "@hastebin/google-cloud-data-store": "*",
    "@hastebin/google-cloud-storage": "*",
    "@hastebin/memcached-data-store": "*",
    "@hastebin/mongo-data-store": "*",
    "@hastebin/postgres-data-store": "*",
    "@hastebin/redis-data-store": "*",
    "@hastebin/rethinkdb-data-store": "*",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-form-data": "^2.0.2",
    "@types/supertest": "^2.0.12",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^6.0.0",
    "eslint-config": "*",
    "jest-config": "*",
    "mocha": "^8.1.3",
    "module-resolver": "^1.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "supertest": "^6.2.3",
    "ts-auto-mock": "^3.6.2",
    "ts-jest": "^28.0.5",
    "ts-node": "~10.7.0",
    "tsconfig": "*",
    "tscpaths": "^0.0.9"
  },
  "bundledDependencies": [],
  "main": "haste",
  "bin": {
    "haste-server": "./dist/src/server/index.js"
  },
  "files": [
    "src",
    "static"
  ],
  "nodemonConfig": {
    "ignore": [
      "test/**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "config"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server/index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "copy:files": "copyfiles -u 1 static/**/* dist/static",
    "remove:files": "rimraf dist",
    "test:unit": "jest --colors --config config/jest.config.js",
    "test:unit:coverage": "yarn test:unit --ci --silent --maxWorkers 2 --collectCoverage true",
    "test:api": "jest --colors --config config/jest.api.config.js",
    "test:api:ci": "yarn test:api --ci --silent",
    "build:typescript": "tsc --project tsconfig.json",
    "build": "yarn remove:files && yarn copy:files && yarn build:typescript",
    "start": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register ./dist/src/server/index.js",
    "dev": "yarn dotenv -e .env nodemon",
    "lint": "eslint . --ext js,ts",
    "lint:ci": "yarn lint --quiet",
    "lint:fix": "eslint . --ext js,ts --fix",
    "types:check": "tsc --noEmit --pretty"
  }
}
